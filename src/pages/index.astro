---
import Layout from '../layouts/Layout.astro';
import Header from '../components/minimal/header.astro';
import Hero from '../components/minimal/hero.astro';
import WhatIDo from '../components/minimal/whatIDo.astro';
import Featured from '../components/minimal/featured.astro';
import Experience from '../components/minimal/experience.astro';
import Contact from '../components/minimal/contact.astro';
import Footer from '../components/minimal/footer.astro';
---


<Layout title="Minimal Portfolio">
	<main class=" h-full relative overflow-hidden px-5 bg-white text-textColor font-inter">
    <div class=" max-w-[1244px] h-full bg-white w-full mx-auto">
      <div class="bg-mobile-background-pattern xl:bg-background-pattern bg-no-repeat w-full h-full bg-cover">
      <div class="pl-5">
        <Header />
        <Hero />
        <WhatIDo />
        <Featured />
        <Experience />
        <Contact />
        <Footer />
      </div>
    </div>
    </div>
	</main>
</Layout>
